<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="anibike.loader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="anibike.loader.splash"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="anibike.loader.deviceSelectionActivity"
            android:configChanges="orientation"
            android:label="@string/device_selection_activity_title"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="anibike.loader.DEVICESELECTIONACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="anibike.loader.deviceControlActivity"
            android:configChanges="orientation"
            android:label="@string/device_control_activity_title"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="anibike.loader.DEVICECONTROLACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="anibike.loader.aboutPanelActivity"
            android:label="@string/title_about_anibike"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="anibike.loader.ABOUTPANELACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="anibike.loader.aboutDeviceActivity"
            android:label="@string/title_about_device"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="anibike.loader.ABOUTDEVICEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="anibike.loader.DeviceSelectionActivity"
            android:label="@string/title_activity_device_selection" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>